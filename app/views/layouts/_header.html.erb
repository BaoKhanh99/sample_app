<header class="navbar navbar-fixed-top navbarinverse ">
  <div class="container">
    <%= link_to t("header.logo"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header.home"), static_pages_home_path %></li>
        <li><%= link_to t("header.help"), static_pages_help_path %></li>
        <li><%= link_to t("header.contact"), static_pages_contact_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("header.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data:{toggle: "dropdown"} do %>
              <%= t "header.account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.profile"), current_user %></li>
              <li><%= link_to t("header.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li> <%= link_to t("header.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
